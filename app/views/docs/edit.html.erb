<h1>Fix: <%= @doc.title %></h1>
<p>
   <strong>Created Date:</strong> <%= @doc.created_at %><br />
</p>
<p><%= @doc.content %></p>


<%= link_to "All Docs", docs_path, class: "btn btn-success btn-sm" %>
<%= link_to "Cancel", doc_path(@doc), class: "btn btn-warning btn-sm" %>
<%= link_to "Trash", doc_path(@doc), class: "btn btn-danger btn-sm", method: :delete, data: { confirm: "Are You Sure?" } %>


